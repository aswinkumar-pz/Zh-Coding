  </servlet>
  <servlet-mapping>
  	<servlet-name>AddEmp</servlet-name>
  	<url-pattern>/add</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>RemoveEmp</servlet-name>
  	<servlet-class>Delete</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>RemoveEmp</servlet-name>
  	<url-pattern>/delete</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>EditEmp</servlet-name>
  	<servlet-class>Edit</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>EditEmp</servlet-name>
  	<url-pattern>/edit</url-pattern>
  </servlet-mapping>
  
  
