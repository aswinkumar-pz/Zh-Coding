<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
	
	<package name="default" extends="struts-default">
		
		<action name="goHome">
			<result>/home.jsp</result>
		</action>
		
		<action name="getDetails" class="DetailsAction">
			<result>/add.jsp</result>
		</action>
		
		<action name="add" class="AddAction" method="execute">
			<result name="success">/success.jsp</result>
		</action>
		
		<action name="viewDetails" class="ViewAction" method="execute">
			<result name="success">/view.jsp</result>
		</action>
		
		<action name="editDetails" class="DetailsAction">
			<result name="success">/edit.jsp</result>
		</action>
		
		<action name="edit" class="EditAction" method="execute">
			<result name="success">/editdata.jsp</result>
		</action>
		
		<action name="edit" class="EditAction" method="finish">
			<result name="success">/success.jsp</result>
		</action>
		
		
	</package>
	
</struts>